<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up Page</title>
    <script src="https://cdn.tailwindcss.com"></script>
    
</head>

<% if (typeof error !== 'undefined' && error) { %>  
    <div class=" px-3 rounded bg-red-600 py-2 mt-3 text-center">
        <p class="text-white"><%= error %></p>
    </div
  <% } %>

<!-- Toast Container -->
<div id="toast-container" class="fixed top-5 right-5 space-y-2 hidden">
    <div class="flex items-center p-4 bg-yellow-600 text-white rounded-md shadow-lg">
      <span id="error-message"></span>
      <button class="ml-3 text-white border-white" onclick="dismissToast()">âœ•</button>
    </div>
  </div>

    <div class="flex items-center justify-center min-h-screen bg-white">        
    <div class="bg-white shadow-md rounded-lg  max-w-4xl  w-full overflow-hidden">
        <div class="grid grid-cols-2 rounded-lg ">
            <!-- Left Image Section -->
            <div class="bg-blue-900 p-10 flex items-center justify-center rounded-l-lg">
                <img src="/images/shoppingCart.png" alt="Shopping Cart" class="h-120 w-120 object-contain">
            </div>

            <!-- Right Form Section -->
            <div class="p-8">
                <h2 class="text-3xl font-bold mb-4">Create an account</h2>
                <p class="text-gray-600 mb-6">Enter your details below</p>
                <!-- Sign-up form-->
                <form id="user-sign-up" method="POST" action="/user/signup" >
                    <div class="grid grid-cols-2 gap-4">
                        <!-- First Name -->
                        <div class="mb-4">
                            <input type="text" name="firstName" required value="abbas" id="first-name"  placeholder="First Name" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                        </div>
                        <!-- Last Name -->
                        <div class="mb-4">
                            <input type="text" name="lastName" required value="Firdous" id="last-name"  placeholder="Last Name" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                        </div>
                    </div>
                    <!-- Phone Number -->
                    <div class="mb-4">
                        <input type="text" name="phoneNumber" required value="8596531452" id="phone-number"  placeholder="Phone Number" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                    </div>
                    <!-- Email -->
                    <div class="mb-4">
                        <input type="email" name="email" id="email" required value="abbasfirdous.40@gmail.com"  placeholder="Email" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                    </div>
                    <!-- Password -->
                    <div class="mb-6">
                        <input type="password" name="password" id="password" required value="xdv14nmjad" placeholder="Password" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                    </div>
                    <!-- Submit Button -->
                    <button type="submit" class="w-full bg-red-700 text-white px-4 py-2 rounded-md hover:bg-red-800  transition duration-200">Create Account</button>
                </form>

                <!-- Sign up with Google -->
                <div class="mt-6 flex justify-center">
                    <a href="/auth/google">
                    <button class="flex items-center justify-center w-full px-4 py-2 bg-white border border-gray-300 text-gray-600 rounded-md hover:bg-gray-100 transition duration-300">
                           <img src="https://img.icons8.com/color/48/000000/google-logo.png" alt="Google" class="h-5 w-5 mr-2">
                           Sign up with Google
                        </button>
                    </a> 
                </div>

                <!-- Log In Link -->
                <p class="mt-6 text-center text-gray-500">Already have an account? <a href="/user/login" class="text-blue-500 hover:underline">Log In</a></p>
            </div>
        </div>
    </div>
</div>

<script type="module" src="/javascript/signupForm.js"></script>



<!-- Toast closing script here...-->
<script>
    function dismissToast() {
    document.getElementById('toast-container').classList.add("hidden");
  }
</script>
</body>
</html>
