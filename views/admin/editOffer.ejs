<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>offers - Admin Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-100">
    <!-- Main Container -->
    <div id="main-container" class="flex h-screen">
      <!-- Sidebar (same as before) -->
      <aside class="w-64 bg-white p-6 shadow-lg">
        <div class="flex flex-col">
          <div class="text-2xl font-bold mb-10 w-64">Admin Dashboard</div>

          <!-- Navigation Menu -->
          <nav class="space-y-4">
            <a
              href="/admin/dashboard"
              class="flex items-center text-gray-700 hover:bg-gray-200 p-2 rounded"
            >
              <span class="material-icons">dashboard</span>
              <span class="ml-2">Dashboard</span>
            </a>
            <a
              href="/admin/Products"
              class="flex items-center text-gray-700 hover:bg-gray-200 p-2 rounded"
            >
              <span class="material-icons">inventory</span>
              <span class="ml-2">Products</span>
            </a>
            <a
              href="/admin/category"
              class="flex items-center text-grey-700 hover:bg-gray-200 p-2 rounded"
            >
              <span class="material-icons">category</span>
              <span class="ml-2">Category</span>
            </a>
            <a
              href="/admin/orders"
              class="flex items-center text-gray-700 hover:bg-gray-200 p-2 rounded"
            >
              <span class="material-icons">shopping_cart</span>
              <span class="ml-2">Orders</span>
            </a>
            <a
              href="/admin/coupons"
              class="flex items-center text-gray-700 hover:bg-gray-200 p-2 rounded"
            >
              <span class="material-icons">redeem</span>
              <span class="ml-2">Coupons</span>
            </a>
            <a
              href="/admin/offers"
              class="flex items-center text-red-700 hover:bg-red-200 p-2 rounded"
            >
              <span class="material-icons">local_offer</span>
              <span class="ml-2">Offers</span>
            </a>
            <a
              href="/admin/sales"
              class="flex items-center text-gray-700 hover:bg-gray-200 p-2 rounded"
            >
              <span class="material-icons">campaign</span>
              <span class="ml-2">Sales</span>
            </a>
            <a
              href="/admin/customers"
              class="flex items-center text-gray-700 hover:bg-gray-200 p-2 rounded"
            >
              <span class="material-icons">people</span>
              <span class="ml-2">Customers</span>
            </a>
            <a
              href="/admin/logout"
              class="flex items-center text-red-600 hover:bg-red-100 p-2 rounded mt-10"
            >
              <span class="material-icons">logout</span>
              <span class="ml-2">Logout</span>
            </a>
          </nav>
        </div>
      </aside>

      <!-- Container -->
  <div class="container mt-5 p-6 w-full max-w-6xl">

    <!-- Page Header -->
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-3xl font-bold text-gray-800">Admin Offer Management</h1>
      <button id="create-button" class="px-4 py-2 bg-indigo-600 text-white rounded-md shadow-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500">
        Create Offer
      </button>
    </div>

    <!--Edit Offer Form -->
    <div class="bg-white shadow-md rounded-md p-6 w-full mb-8">
        <input type="hidden" id="offerId" value="<%=offerId%>">
      <h2 class="text-xl font-bold text-gray-700 mb-4 uppercase" >Edit Offer</h2>
      <form id="edit-offer-form" class="space-y-4">
        <!-- Category Selection -->
        <div>
          <label for="category" class="block text-sm font-medium text-gray-700">Category</label>
          <% if (typeof categories !== 'undefined' && categories) { %>
            <select id="category" class="block p-2 uppercase w-full mt-1 border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500">
              <% categories.forEach(category => { %>
                <option value="<%=category.categoryName %>" <%=selectedCategory === category.categoryName ? 'selected' : '' %>><%= category.categoryName %></option>
              <% }) %>
            </select>
          <% } %>
        </div>

        <!-- Discount Percentage -->
        <div>
          <label for="discount" class="block text-sm font-medium text-gray-700">Discount Percentage</label>
          <input type="number" id="discount" value="<%=offer.discountPercentage %>" min="1" max="99" class="p-2 block w-full mt-1 border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500">
        </div>
        <!-- Offer Name -->
        <div >
          <label for="offer-name" class="block text-sm font-medium text-gray-700">Offer Name</label>
          <input type="text" id="offer-name" value="<%=offer.offerName %>" class=" p-2 block w-full mt-1 border-gray-300 rounded-md shadow-sm ">
        </div>

        <!-- Valid From Date -->
        <div>
          <label for="validFrom" class="block text-sm font-medium text-gray-700">Valid From</label>
          <input type="date" id="validFrom" value="<%= new Date(offer.validFrom).toISOString().split('T')[0] %>"  class="block w-full mt-1 border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500">
        </div>

        <!-- Valid Until Date -->
        <div>
          <label for="validUntil" class="block text-sm font-medium text-gray-700">Valid Until</label>
          <input type="date" id="validUntil" value="<%= new Date(offer.validUntil).toISOString().split('T')[0] %>" class="block w-full mt-1 border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500">
        </div>

        <!-- Submit Button -->
        <div class="flex justify-between ">
            <a href="/admin/offers" class="px-4 py-2 bg-gray-600 text-white rounded-md hover:bg-gray-700  mr-4">
               Cancel
            </a>
          <button type="submit" class="px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500">Update Offer</button>
        </div>
      </form>
    </div>


  </div>

    <!-- Google Material Icons -->
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet"
    />
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/javascript/editOffer.js"></script>
  </body>
</html>
