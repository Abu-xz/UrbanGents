<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
  </head>
  <body class="bg-gray-100">
    <!-- Main Container -->
    <div class="flex">
      <!-- Sidebar -->
      <aside class="w-64 bg-white h-screen p-6 shadow-lg">
        <div class="flex flex-col">
          <div class="text-2xl font-bold mb-10">Admin Dashboard</div>

          <!-- Navigation Menu -->
          <nav class="space-y-4">
            <a
              href="/admin/dashboard"
              class="flex items-center text-red-700 hover:bg-red-200 p-2 rounded"
            >
              <span class="material-icons">dashboard</span>
              <span class="ml-2">Dashboard</span>
            </a>
            <a
              href="/admin/products"
              class="flex items-center text-gray-700 hover:bg-gray-200 p-2 rounded"
            >
              <span class="material-icons">inventory</span>
              <span class="ml-2">Products</span>
            </a>
            <a
              href="/admin/category"
              class="flex items-center text-gray-700 hover:bg-gray-200 p-2 rounded"
            >
              <span class="material-icons">category</span>
              <span class="ml-2">Category</span>
            </a>
            <a
              href="/admin/orders"
              class="flex items-center text-gray-700 hover:bg-gray-200 p-2 rounded"
            >
              <span class="material-icons">shopping_cart</span>
              <span class="ml-2">Orders</span>
            </a>
            <a
              href="/admin/coupons"
              class="flex items-center text-gray-700 hover:bg-gray-200 p-2 rounded"
            >
              <span class="material-icons">redeem</span>
              <span class="ml-2">Coupons</span>
            </a>
            <a
              href="/admin/offers"
              class="flex items-center text-gray-700 hover:bg-gray-200 p-2 rounded"
            >
              <span class="material-icons">local_offer</span>
              <span class="ml-2">Offers</span>
            </a>
            <a
              href="/admin/sales"
              class="flex items-center text-gray-700 hover:bg-gray-200 p-2 rounded"
            >
              <span class="material-icons">campaign</span>
              <span class="ml-2">Sales</span>
            </a>
            <a
              href="/admin/customers"
              class="flex items-center text-gray-700 hover:bg-gray-200 p-2 rounded"
            >
              <span class="material-icons">people</span>
              <span class="ml-2">Customers</span>
            </a>
          </nav>

          <!-- Logout -->
          <div class="mt-2">
            <a
              href="/admin/logout"
              class="flex items-center text-red-600 hover:bg-red-100 p-2 rounded"
            >
              <span class="material-icons">logout</span>
              <span class="ml-2">Logout</span>
            </a>
          </div>
        </div>
      </aside>

      <!-- Main Content -->
      <main class="flex-1 p-10">
        <!-- Filters Section -->
        <div class="bg-white p-4 rounded shadow mb-3">
          <h2 class="text-lg font-semibold mb-2">Filters</h2>
          <div class="flex gap-4 items-center mb-2">
            <select
              id="timeFilter"
              class="border border-gray-300 p-2 rounded focus:outline-none focus:ring-2 focus:ring-blue-600"
            >
              <option value="daily">Daily</option>
              <option value="monthly">Monthly</option>
              <option value="yearly">Yearly</option>
            </select>
          </div>

          <!-- Dashboard Cards -->
          <div
            class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6"
            id="dashboardCards"
          >
            <!-- Cards will be populated dynamically here -->
          </div>
        </div>

        <!-- Charts Section -->
        <section class="grid grid-cols-1 gap-6">
          <!-- Sales Chart -->
          <div class="bg-white p-4 rounded shadow">
            <h2 class="text-lg font-semibold mb-4">Sales Chart</h2>
            <div id="sales-chart"></div>
          </div>
        </section>

        <section class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-6">
          <!-- Top Products Chart -->
          <div class="bg-white p-4 rounded shadow">
            <h2 class="text-lg font-semibold mb-4">Top 10 Products</h2>
            <div id="product-chart"></div>
          </div>

          <!-- Top Categories Chart -->
          <div class="bg-white p-4 rounded shadow">
            <h2 class="text-lg font-semibold mb-4">Top Categories</h2>
            <div id="category-chart"></div>
          </div>
        </section>
      </main>
    </div>

    <!-- Google Material Icons -->
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet"
    />
    <script src="/javascript/dashboard.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    `
  </body>
</html>
